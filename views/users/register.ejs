<% layout('layouts/boilerplate') %>

    <div class="forms">
        <div class="container">
            <form action="/register" method="POST" class="form validate__form" novalidate>
                <div class="form__field row__mobile">
                    <label class="form__label" for="firstname"><span class="form__underline">First Name</span></label>
                    <input class="form__input" type="text" id="firstname" name="firstname" min="1" max="50" required>

                </div>
                <p class="form__subtext">
                    First name must be a min of 3 characters and a max of 50.
                </p>
                <div class="form__field row__mobile">
                    <label class="form__label" for="lastname"><span class="form__underline">Last Name</span></label>
                    <input class="form__input" type="text" id="lastname" name="lastname" min="1" max="50" required>

                </div>
                <p class="form__subtext">
                    Last name must be a min of 3 characters and a max of 50.
                </p>
                <div class="form__field row__mobile">
                    <label class="form__label" for="username"><span class="form__underline">Username</span></label>
                    <input class="form__input" type="text" id="username" name="username" min="4" max="15" required>

                </div>
                <p class="form__subtext">
                    Username must be a min of 4 characters and a max of 15.
                </p>
                <div class="form__field row__mobile">
                    <label class="form__label" for="email"><span class="form__underline">Email</span></label>
                    <input class="form__input" type="email" id="email" name="email" required>

                </div>
                <p class="form__subtext">
                    Please provide a valid email.
                </p>
                <div class="form__field row__mobile">
                    <label class="form__label" for="age"><span class="form__underline">Age</span></label>
                    <input class="form__input" type="date" id="age" name="age" required>

                </div>
                <p class="form__subtext">
                    You must be at least 12 years of age.
                </p>
                <div class="form__field row__mobile">
                    <label class="form__label" for="password"><span class="form__underline">Password</span></label>
                    <input class="form__input" type="password" id="password" name="password" min="8" max="20" required>

                </div>
                <p class="form__subtext">
                    Password must be a minimum of 8 characters.
                </p>
                <div class="form__field row__mobile">
                    <label class="form__label" for="repeatpassword"><span class="form__underline">Repeat
                            Password</span></label>
                    <input class="form__input" type="password" id="repeatpassword" name="repeatpassword" min="8"
                        max="20" required>

                </div>
                <p class="form__subtext">
                    Password must match.
                </p>
                <div class="form__field row__mobile">
                    <label class="form__label" for="isAdmin"><span class="form__underline">Admin Account</span></label>
                    <input class="form__checkbox" type="checkbox" name="isAdmin" id="isAdmin">

                </div>
                <p class="form__subtext">
                    Please select to create an admin account.
                </p>
                <div class="row__mobile row__mobile--end"><button class="form__button">Register</button></div>
            </form>
        </div>
    </div>