<% layout('layouts/boilerplate') %>
    <article class="all-films">
        <% for(let film of films){ %>
            <% if(userAge) {%>
                <% if(userAge>= film.ratingAge){ %>
                    <div class="container row">
                        <div class="col">
                            <h1 class="title--large">
                                <%= film.title %>
                            </h1>
                        </div>

                        <div class="col">
                            <div class="row__all-films">
                                <p class="all-films__text">
                                    <%= film.runtime %> mins
                                </p>
                                <p class="all-films__text">
                                    <%= film.rating %>
                                </p>
                                <p class="all-films__text">
                                    <%= film.releasedate %>
                                </p>
                            </div>
                            <img src="<%= film.image.url %>" alt="" class="all-films__image">
                            <div class="row__all-films all-films__genres">
                                <% film.genre.forEach((genre)=> { %>
                                    <p class="all-films__text all-films__genres__text">
                                        <%= genre %>
                                    </p>
                                    <% }); %>
                            </div>
                        </div>

                        <div class="col">
                            <p class="all-films__text">
                                <%= film.description %> Lorem ipsum dolor sit amet consectetur adipisicing
                                    elit. Lorem ipsum dolor sit amet consectetur adipisicing
                                    elit. Lorem ipsum dolor sit amet consectetur.
                            </p>
                        </div>

                        <div class="col">
                            <div class="all-films__cta">
                                <p class="all-films__cta__text">
                                    <%= film.stock %> left
                                </p>
                                <a href="/films/<%= film.titleSlug %>" class="button button--medium">Book now</a>
                            </div>

                        </div>
                    </div>
                    <% } %>
                        <% } %>
                            <% } %>
    </article>